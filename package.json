{
  "name": "n8n-mcp-aurelien",
  "version": "1.0.0",
  "description": "Model Context Protocol server for n8n automation - Complete version with SQLite database and templates",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "n8n-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && mkdir -p dist/database && cp src/database/schema.sql dist/database/schema.sql",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "fetch:nodes": "tsx scripts/fetch-nodes.ts",
    "fetch:templates": "tsx scripts/fetch-templates.ts",
    "db:init": "tsx scripts/init-db.ts",
    "db:seed": "npm run fetch:nodes && npm run fetch:templates && npm run db:init",
    "docker:build": "docker build -t n8n-mcp-aurelien:latest -f docker/Dockerfile .",
    "docker:run": "docker-compose -f docker/docker-compose.yml up"
  },
  "keywords": [
    "n8n",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "automation",
    "workflow"
  ],
  "author": "AurÃ©lien Fagioli",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
